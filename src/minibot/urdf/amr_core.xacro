    <!-- LiDAR -->

    <joint name = "lidar_joint" type = "fixed">
        <parent link = "chassis" />
        <child link = "lidar"/>
        <origin xyz = "0 0 0" rpy = "0 0 0"/>
    </joint>

    <link name="lidar">
        <visual>
            <origin xyz="0.25 0 0.165"/>
            <geometry>
                <cylinder radius="0.035" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>        
